@model Serene_Movies_Task.Membership.ActivateEmailModel

<html>
<head>
    <title>Activate your Serene_Movies_Task account</title>
</head>
<body>
    <p>@Model.DisplayName,</p>

    <p>We received a request to create a new account on Serene_Movies_Task with your email address.</p>

    <p>Click the link below to activate your account:</p>

    <p><a href="@Model.ActivateLink">@Model.ActivateLink</a></p>

    <p>If it wasn't you who requested this, you can ignore this email.</p>

    Thanks,
    The "Serene_Movies_Task" Team
</body>
</html>